extends layout

block content
    .container
        .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
            .panel.panel-default
                .panel-body
                    h1.text-center Contact
                    br
                    form.ct-form(action='', method='post')
                        .form-group.ct-form-first
                            label.sr-only(for='email') Mail address
                            if commons && commons.user && commons.user.email
                                input#email.form-control(type='email', placeholder='Email address', name='email', value=commons.user.email, required)
                            else
                                input#email.form-control(type='email', placeholder='Email address', name='email', required)
                        .form-group
                            label.sr-only(for='object') Object
                            input#object.form-control(type='text', placeholder='Object', name='object', required)
                        .form-group.ct-form-last
                            label.sr-only(for='content') Content
                            textarea#content.form-control(placeholder='Content', name='content', required, rows=5, style="resize: vertical;")
                        .text-center
                            br
                            button.btn.btn-success.btn-block(type='submit', name='submit', value='submit') Send!

